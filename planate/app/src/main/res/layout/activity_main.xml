<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/homei"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The best app for your plants"
        android:textSize="50sp"
        android:textColor="@color/mywhite"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="100dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_signupbtn_id"
        android:background="@drawable/btnshupe"
        app:backgroundTint="@color/mywhite"
        android:textColor="@color/bg"
        android:textStyle="bold"
        android:text="Sign up"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_loginbtn_id"
        android:background="@drawable/btnshupe"
        app:backgroundTint="@color/bg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:text="login"/>
</LinearLayout>