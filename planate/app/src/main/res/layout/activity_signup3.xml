<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup_Activity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="40dp"
        android:elevation="20dp"
        android:background="@drawable/edittext"
        >

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:textColor="@color/bg"
        android:textStyle="bold"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your new account"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#b1b1b1"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#b1b1b1"
        android:hint="Full Name"
        android:layout_marginHorizontal="28dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullname_id"
            android:paddingStart="2dp"
            android:background="@drawable/edittext"
            android:inputType="text"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:layout_marginTop="40dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#b1b1b1"
        android:hint="Email Address"
        android:layout_marginHorizontal="28dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_id"
            android:paddingStart="2dp"
            android:background="@drawable/edittext"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/emailicon"
            android:layout_marginTop="25dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#b1b1b1"
        android:hint="Password"
        android:layout_marginHorizontal="28dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signuppassword_id"
            android:paddingStart="2dp"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:layout_marginTop="25dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#b1b1b1"
        android:hint="Confirm password"
        android:layout_marginHorizontal="28dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmpassword_id"
            android:paddingStart="2dp"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:layout_marginTop="25dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_btn_id"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/btnshupe"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp"
        android:text="Sign up"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="@color/bg"
        />
    </LinearLayout>
</LinearLayout>